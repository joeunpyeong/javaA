package pack01_new;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Store store = new Store();
		int select;
		Scanner sc = new Scanner(System.in);
		userStats uStats= new userStats();
		
		//상점 이거 요약 어케 Store에 보냄;;
		store.mixMenu();
		while(true) {
			try {
				store.showMenu();
				System.out.print("\n(1.구매 / 2.정보 / 3.판매 / 4.나가기)\n=>");
				select = Integer.parseInt(sc.nextLine());
				if(select==1) {
					while(true) {
						select = store.buySelect();
						if (select == -1) {	
							break;
						} else {	
							userStats.money=store.buyItem(select,userStats.money);
						}
					}
				}else if(select==2) {
					System.out.println(store.menuInfo());
				}else if(select==3) {
					while(true) {
						select = store.sellSelect();
						if (select == -1) {	
							break;
						} else {	
							userStats.money=store.sellItem(select,userStats.money);
						}
					}
				}else if(select==4) {
					System.out.println("상점을 떠납니다.");
					break;
				}
			} catch (Exception e) {
				System.out.println("메뉴 버튼의 숫자만 입력해주세요.");}	
			System.out.println("----------------------------------------");
		}//상점 이거 끝내긴 했음

		
	}
}