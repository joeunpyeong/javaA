package pack01_new;

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Store store = new Store();
		int select;
		Scanner sc = new Scanner(System.in);
		int money=1000;
		
		store.mixMenu();
		while(true) {
			try {
				store.showMenu();
				System.out.print("\n(1.구매 / 2.정보 / 3.나가기)\n=>");
				select = Integer.parseInt(sc.nextLine());
				if(select==1) {
					while(money<0) {
						select = store.buySelect();
						if (select == -1) {	
							break;
						} else {	
							money=store.buyItem(select,money);
						}
					}
				}else if(select==2) {
					System.out.println(store.menuInfo());
				}else if(select==3) {
					System.out.println("상점을 떠납니다.");
					break;
				}
			} catch (Exception e) {}	
			System.out.println("메뉴 버튼의 숫자만 입력해주세요.");
		}
		System.out.println("----------------------------------------");

		
	}
}