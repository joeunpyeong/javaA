package pack01_new;

public class Main {
	public static void main(String[] args) {
		Store store = new Store();
		int select;
		
		store.mixMenu();
		System.out.println("----------------------------------------");
		while(true) {
			select = store.buySelect();
			if (select == -1) {	
				
			} else if(select == -2){
				store.buyItem(select);
			}else if(select == -3){
				break;
			}
		System.out.println("구매한 총 금액 : " +store.sales+"\n");
		System.out.println("----------------------------------------");
		}
		
	}
}