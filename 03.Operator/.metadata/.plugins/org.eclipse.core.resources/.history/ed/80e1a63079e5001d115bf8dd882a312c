import java.util.Scanner;

public class ex {
public static void main(String[] args) {
	 Scanner sc = new Scanner(System.in);
	 ex_dao dao=new ex_dao();
	 int input = 0;//일단
	 boolean call=false,dmb=false,internet=false,webtoon=false;
	
	 System.out.print("버전 입력(1~3): ");
	 int VERSION = Integer.parseInt(sc.nextLine());
	 
	while(true) {
		System.out.println("------------------");
		if(call==false) {	//버전 1
			System.out.println("\n1.전화");
		}else if(call==true) {
			System.out.println("\n1.음성 발신");
		}
		if(VERSION>=2 &&dmb==false&&call==false) {	//버전2
			System.out.println("2.DMB 방송 켜기");
		}else if(VERSION>=2 &&dmb==true) {
			System.out.println("2.DMB 방송 끄기");
		}else if(VERSION==1 &&call==false){
			System.out.println("2.핸드폰 Off");
		}else if(call==true) {
			System.out.println("2.음성 수신");
		}
		if(VERSION>=3 && internet==false) {//버전 3
			System.out.println("3.인터넷 켜기");
		}else if((VERSION>=3 && internet==true)) {
			System.out.println("3.인터넷 끄기");
		}else if(VERSION==2&&call==false){
			System.out.println("3.핸드폰 Off");
		}else if(call==true) {
			System.out.println("3.전화 끊기");
		}
		if(VERSION>=3 && webtoon==false) {
			System.out.println("4.웹툰 보기");
		}else if(VERSION>=3 && webtoon==true){
			System.out.println("4.웹툰 끄기");
		}
		if(VERSION==3) {
			System.out.println("5.핸드폰 Off");
		}
		System.out.println("상태정보 : ");
		System.out.println("------------------");
		
		
		while(true) {
			try {
				System.out.print("\n번호를 입력하세요:");
				input = Integer.parseInt(sc.nextLine());
				break;
			} catch (Exception e) {

			}
		}
		
		
		
		switch(input){
		case 1:
			if(call==false) {	//버전 1
				call=true;
			}else if(call==true) {
				dao.messageSend();
			}
			break;
		case 2:
			if(VERSION>=2 &&dmb==false&&call==false) {	//버전2
				dmb=true;
			}else if(VERSION>=2 &&dmb==true) {
				System.out.println("dmb가 종료되었습니다\n");
				dmb=false;
			}else if(VERSION==1&&call==false){
				System.out.println("2.핸드폰 Off");
			}else if(call==true) {
				dao.messageReceive();
			}
			break;
		case 3:
			if(VERSION>=3 && internet==false&&call==false) {//버전 3
				System.out.println("3.인터넷 켜기");
				internet=true;
			}else if((VERSION>=3 && internet==true)) {
				System.out.println("3.인터넷 끄기");
				internet=false;
			}else if(VERSION==2){
				System.out.println("3.핸드폰 Off");
			}else if(call==true) {
				System.out.println("전화가 종료되었습니다\n");
				call=false;
			}
			break;
		case 4:
			if(VERSION>=3 && webtoon==false) {
				System.out.println("4.웹툰 보기");
				webtoon=true;
			}else if(VERSION>=3 && webtoon==true){
				System.out.println("4.웹툰 끄기");
				webtoon=false;
			}
			break;
		default:
			System.out.println("번호를 다시 입력해 주세요.");
			break;
		}
		
	}
}
}
