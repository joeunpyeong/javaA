package pack01_new;

public class Main {
	public static void main(String[] args) {
		Store store = new Store();
		int select;
		
		store.mixMenu();
		System.out.println("----------------------------------------");
		while(true) {
			select = store.buySelect();
			if (select == -2) {	// -1이면 종료.
				break;
			} else {	// i 가 짝수일 때는 홍길동이 구매.
				store.buyItem(select);
		}
		System.out.println("구매한 총 금액 : " +store.sales+"\n");
		System.out.println("----------------------------------------");
		}
		
	}
}