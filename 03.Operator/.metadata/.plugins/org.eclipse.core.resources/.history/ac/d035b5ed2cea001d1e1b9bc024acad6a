package pack01_new;

import java.util.Scanner;

public class Store {
	Scanner sc = new Scanner(System.in);
	Item[] menu;
	int[] sellMenu=new int[8];
	int random,sales=0,selectNum,money;
	Item[] inven= new Item[6];
	
	// 1. 생성자. 메뉴를 생성한다.
	public Store() {
		menu = new Item[5];
		menu[0] = new Item("딸기우유", 1000, 10,"a");
		menu[1] = new Item("샌드위치", 2000, 5,"b");
		menu[2] = new Item("메로나", 800, 20,"c");
		menu[3] = new Item("풍선껌", 500, 2,"d");
		menu[4] = new Item("크림빵", 1000, 5,"e");
	}
	
	// 2. 메뉴를 출력하는 메소드.
	public void mixMenu() {
		for (int i = 0; i < sellMenu.length; i++) {
			int random=(int) ((Math.random() * menu.length));
			sellMenu[i]=random;
		}
	}
	
	public void showMenu() {
		System.out.println("----------------------------------------");
		for (int i = 0; i < sellMenu.length; i++) {
			System.out.println((i+1) + ". " + menu[sellMenu[i]].name + " : " + menu[sellMenu[i]].price);
		}
		System.out.println("----------------------------------------");
	}
	
	//인벤토리 장비 정보 보기
	public String menuInfo() {
		System.out.print("\n정보를 보고 싶은 메뉴 번호를 입력해주세요.\n(-1 입력 시 정보 보기 종료)\n=>");
		try {
			selectNum = Integer.parseInt(sc.nextLine());
			if (selectNum == -1) {
				return menu[sellMenu[selectNum-1]].info;
			} else if (selectNum >= 1 && selectNum <= menu.length) {
				return menu[sellMenu[selectNum-1]].info;
			} else {
				System.out.println("메뉴 버튼의 숫자만 입력해주세요.");

			}
		} catch (Exception e) {
			System.out.println("메뉴 버튼의 숫자만 입력해주세요.");
		}
		return "";
	}
//	public void sellectList() {
