	// 3.사고 싶은 메뉴를 선택하는 메소드.	
	public int buySelect() {
		while (true) {
//			this.showMenu();
			System.out.print("\n구매하고 싶은 메뉴 번호를 입력해주세요.\n(-1 입력 시 종료)\n=>");
			try {
				selectNum = Integer.parseInt(sc.nextLine());
				if (selectNum == -1) {
					return -1;
				} else if (selectNum >= 1 && selectNum <= menu.length) {
					return (selectNum - 1);
				} else {
					System.out.println("메뉴 버튼의 숫자만 입력해주세요.");
					continue;
				}
			} catch (Exception e) {
				System.out.println("메뉴 버튼의 숫자만 입력해주세요.");
			}
		}
	}
	
	
	public int buyItem(int selectNum, int money) {
		this.money;
		if (menu[sellMenu[selectNum]].stock < 1) {
			System.out.println("재고가 부족합니다.");
		}else if(inven[inven.length-1]!=null){
			System.out.println("인벤토리에 공간이 없습니다.");
			return 0;
		}else if((money-=menu[sellMenu[selectNum]].price)<0){
			System.out.println("물건을 구매할 돈이 없습니다.");
			return 0;
		}else {
			sales = sales + menu[sellMenu[selectNum]].price;
			menu[sellMenu[selectNum]].stock--;
			money-=menu[sellMenu[selectNum]].price;
			for(int i=0;i<inven.length;i++) {
				if(inven[i]==null) {
					inven[i]=menu[sellMenu[selectNum]];
					break;
				}
			}
			System.out.println(menu[sellMenu[selectNum]].name + "을(를) 구매하셨습니다.\n남은 금액은 "+money+"입니다.");
		}
		return money;
	}


	//------------------------------------------------------------------------------------------------

	public void showInventory() {
		for (int i = 0; i < inven.length; i++) {
			if(inven[i].stock!=0)
			System.out.println((i+1) + ". " + inven[i].name + " : " + inven[i].price);
		}
	}
	
	// 3.팔고 싶은 메뉴를 선택하는 메소드.	
	
	public int sellSelect() {
		while (true) {
			this.showMenu();
			System.out.print("팔고 싶은 장비 번호를 입력해주세요.\n(-1 입력 시 되팔기 / -2 입력 시 종료)\n=>");
			try {
				selectNum = Integer.parseInt(sc.nextLine());
				if (selectNum == -1) {
					return -1;
				} else if (selectNum >= 1 && selectNum <=inven.length) {
					return (selectNum - 1);
				} else {
					System.out.println("메뉴 버튼의 숫자만 입력해주세요.");
					continue;
				}
			} catch (Exception e) {
				System.out.println("메뉴 버튼의 숫자만 입력해주세요.");
			}
		}
	}
	
	//인벤토리 장비 정보 보기
	public void invenInfo() {
		
	}
	
	public boolean sellItem(int number) {
		if (menu[number].stock < 1) {
			System.out.println("재고가 부족합니다.");
		}else if(inven[inven.length-1]!=null){
			System.out.println("인벤토리에 공간이 없습니다. 상점에서 쫒겨납니다.");
			return false;
		}else {
			sales = sales + menu[number].price;
			menu[number].stock--;
			for(int i=0;i<inven.length;i++) {
				if(inven[i]==null) {
					inven[i]=menu[number];
					break;
				}
			}
			System.out.println("판매된 총 금액 : " + sales);
			System.out.println(menu[number].name + "이(가) 판매되었습니다.");
		}
		return true;
	}
}